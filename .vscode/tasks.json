{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++",
            "type": "shell",
            "command": "g++",
            "args": 
            [ 
                "${file}", "-o", // 指定输出文件名，不加该参数则默认输出a.exe，Linux下默认a.out 
                "${fileDirname}/${fileBasenameNoExtension}", 
                "-g", // 生成和调试有关的信息 
                "-Wall", // 开启额外警告 
                "-static-libgcc", // 静态链接 
                "-std=c++17" // c++标准
            ], // 编译命令参数 
            
        }
    ]
}